{
  "name": "electron-angular-demo",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "dev": "npm-run-all -p ng:start electron:start",
    "build": "ng build --base-href ./ && npm run electron:build",
    "electron:serve": "tsc -p tsconfig-serve.json && npx electron . --serve",
    "electron:start": "wait-on http-get://localhost:4300/ && npm run electron:serve",
    "electron:build": "tsc -p tsconfig-serve.json && NODE_ENV=prod electron .",
    "ng:start": "ng serve --hmr --port 4300",
    "ng:build": "ng build",
    "ng:watch": "ng build --watch --configuration development",
    "ng:test": "ng test",
    "app:dist": "npm run build && electron-builder",
    "lang:gen": "ng extract-i18n --output-path src/locale",
    "i18n:extract": "transloco-keys-manager extract  -u -d ''",
    "i18n:find": "transloco-keys-manager find"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/cdk": "^16.2.12",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/material": "^16.2.12",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "@electron/remote": "^2.1.0",
    "@ngneat/transloco": "^6.0.0",
    "colorette": "^2.0.20",
    "immutable": "^5.0.0-beta.4",
    "ng-zorro-antd": "^16.2.2",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.2.1",
    "rxjs": "~7.8.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "wait-on": "^7.2.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.9",
    "@angular/cli": "^16.2.9",
    "@angular/compiler-cli": "^16.2.0",
    "@ngneat/transloco-keys-manager": "^3.8.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-build-plus": "^17.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "~5.1.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}